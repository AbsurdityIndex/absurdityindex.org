# X (Twitter) API — bearer token for read-only operations (trends, search, metrics)
# https://developer.x.com/
X_BEARER_TOKEN=

# Your X username (without @) — required for feed management in the dashboard UI
X_USERNAME=

# X API OAuth 1.0a — for posting via API (preferred over browser automation)
# Get these from https://developer.x.com/ → Your App → Keys and Tokens
# App permissions must be set to "Read and write"
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# Browser automation — fallback posting via Playwright x.com UI
# Run `absurdity-index login` to authenticate (saves cookies)
BROWSER_HEADLESS=true

# Anthropic API key - https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Congress.gov API key - https://api.congress.gov/sign-up/
CONGRESS_API_KEY=

# Site URL for generating bill links
SITE_URL=https://absurdityindex.org

# Safety thresholds (optional, defaults shown)
# SAFETY_AUTO_POST_THRESHOLD=20
# SAFETY_REVIEW_THRESHOLD=40

# Auto mode config (optional)
# MAX_POSTS_PER_DAY=8
# MIN_POST_INTERVAL_MINUTES=45
# PEAK_HOURS_START=9
# PEAK_HOURS_END=21

# Imgflip — meme generation (free account: https://imgflip.com/signup)
IMGFLIP_USERNAME=
IMGFLIP_PASSWORD=

# Giphy — reaction GIF search (free API key: https://developers.giphy.com/)
GIPHY_API_KEY=

# Logging level (optional: trace, debug, info, warn, error, fatal)
# LOG_LEVEL=info
