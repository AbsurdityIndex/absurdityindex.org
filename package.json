{
  "name": "absurdity-index.io",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://absurdityindex.org",
  "bugs": {
    "url": "https://github.com/absurdityindex/absurdityindex.org/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/absurdityindex/absurdityindex.org.git"
  },
  "engines": {
    "node": ">=20 <23",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && npx pagefind --site dist",
    "search:index": "npx pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "fetch-bills": "node scripts/fetch-bills.mjs",
    "validate": "node scripts/validate-bills.mjs",
    "validate:strict": "node scripts/validate-bills.mjs --strict-warnings",
    "validate:ci": "node scripts/validate-bills.mjs --strict-warnings",
    "validate:build": "npm run validate && npm run build",
    "security:audit": "npm audit --omit=dev --audit-level=high && npm audit --prefix cli --omit=dev --audit-level=high",
    "security:scan-secrets": "node scripts/scan-secrets.mjs",
    "security:ci": "npm run security:audit && npm run security:scan-secrets",
    "release:check": "node scripts/release-check.mjs",
    "verify": "npm run validate:ci && npm run security:ci && npm run build && npm run build --prefix cli && npm test --prefix cli",
    "cli": "node cli/bin/absurdity-index.mjs",
    "cli:build": "cd cli && npm run build",
    "cli:dev": "cd cli && npx tsx src/index.ts"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "js-yaml": "^4.1.1",
    "pagefind": "^1.4.0",
    "rehype-external-links": "^3.0.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0"
  }
}
