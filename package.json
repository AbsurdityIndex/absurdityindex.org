{
  "name": "absurdityindex.org",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://absurdityindex.org",
  "bugs": {
    "url": "https://github.com/absurdityindex/absurdityindex.org/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/absurdityindex/absurdityindex.org.git"
  },
  "engines": {
    "node": ">=20 <23",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && npx pagefind --site dist",
    "build:full": "npm run build && bash scripts/merge-votechain.sh",
    "search:index": "npx pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "fetch-bills": "node scripts/fetch-bills.mjs",
    "validate": "node scripts/validate-bills.mjs",
    "validate:strict": "node scripts/validate-bills.mjs --strict-warnings",
    "validate:ci": "node scripts/validate-bills.mjs --strict-warnings",
    "check:icons": "node scripts/check-no-unicode-icons.mjs",
    "check:innerhtml": "node scripts/check-no-innerhtml.mjs",
    "validate:build": "npm run validate && npm run build",
    "icons:generate": "node scripts/generate-icons.mjs",
    "security:audit": "npm audit --omit=dev --audit-level=high",
    "security:scan-secrets": "node scripts/scan-secrets.mjs",
    "security:ci": "npm run security:audit && npm run security:scan-secrets",
    "release:check": "node scripts/release-check.mjs",
    "test": "node --test tests/*.test.js",
    "typecheck": "astro check --minimumFailingSeverity hint",
    "lint": "eslint --max-warnings=0 .",
    "lint:md": "npx markdownlint-cli2",
    "format": "prettier --write \"{src,scripts,public,tests}/**/*.{js,ts,mjs,cjs,astro,css,json}\" \"*.{js,mjs,cjs,ts,json}\"",
    "format:check": "prettier --check \"{src,scripts,public,tests}/**/*.{js,ts,mjs,cjs,astro,css,json}\" \"*.{js,mjs,cjs,ts,json}\"",
    "verify": "npm run check:icons && npm run check:innerhtml && npm run validate:ci && npm test && npm run lint && npm run typecheck && npm run format:check && npm run security:ci && npm run build"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "js-yaml": "^4.1.1",
    "pagefind": "^1.4.0",
    "rehype-external-links": "^3.0.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3"
  }
}
