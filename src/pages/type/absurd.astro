---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BillCard from '../../components/bills/BillCard.astro';
import BillDirectoryControls from '../../components/ui/BillDirectoryControls.astro';
import Pagination from '../../components/ui/Pagination.astro';
import { getCollection } from 'astro:content';
import { DIRECTORY_PAGE_SIZE, sortByDateDesc, toCategorySlug } from '../../utils/directory.js';

const allBills = await getCollection('bills');
const absurdBills = allBills.filter((b) => b.data.billType === 'absurd');
const categories = [...new Set(absurdBills.map((b) => b.data.category))].sort();
const sortedBills = [...absurdBills].sort(sortByDateDesc);

const totalCount = sortedBills.length;
const totalPages = Math.max(1, Math.ceil(totalCount / DIRECTORY_PAGE_SIZE));
const currentPage = 1;
const bills = sortedBills.slice(0, DIRECTORY_PAGE_SIZE);
---

<BaseLayout
  title="Real Absurdities"
  description="These aren't jokes - these are real laws and bills that actually exist. We couldn't make this stuff up if we tried."
>
  {totalPages > 1 && <link slot="head" rel="next" href="/type/absurd/page/2/" />}

  <div class="mx-auto max-w-6xl px-3 py-8 min-[375px]:px-4 min-[430px]:py-10 md:py-12">
    <div class="mb-8 text-center min-[430px]:mb-10">
      <p
        class="mb-2 font-mono text-[11px] uppercase tracking-widest min-[375px]:text-sm text-red-700"
      >
        Bill Type
      </p>
      <h1 class="font-serif text-2xl font-bold text-navy-900 min-[375px]:text-3xl md:text-4xl">
        Real Absurdities
      </h1>
      <p
        class="mt-2 font-serif italic text-sm text-navy-600 min-[375px]:mt-3 min-[375px]:text-base"
      >
        You can't make this stuff up - because someone already did, and it became law
      </p>
    </div>
    <div class="gold-rule"></div>

    <BillDirectoryControls
      tabs={[
        { href: '/not-bills', label: 'Not Bills' },
        { href: '/type/sensible', label: 'Sensible' },
        { href: '/type/absurd', label: 'Real Absurdities', active: true },
      ]}
      sortOptions={[
        { value: 'newest', label: 'Newest First' },
        { value: 'oldest', label: 'Oldest First' },
        { value: 'title', label: 'Title A-Z' },
        { value: 'featured', label: 'Featured First' },
      ]}
      defaultSortValue="newest"
      initialSortSummary="Sorted by newest first"
      initialCount={bills.length}
      totalAvailableCount={totalCount}
      categories={categories}
      searchLabel="Search absurd bills"
      searchPlaceholder="Search titles, sponsors, categories, or tags..."
      apiPagePath="/api/absurd-bills/page"
      currentPage={currentPage}
      totalPages={totalPages}
      cardVariant="default"
      directoryLabel="absurd bills"
    />

    <div
      class="mt-4 flex flex-col gap-1 text-xs font-sans text-navy-500 min-[430px]:flex-row min-[430px]:items-center min-[430px]:justify-between"
    >
      <p>Page {currentPage} of {totalPages}</p>
      <p>{totalCount} total absurd bills in the index</p>
    </div>

    <div
      id="bills-grid"
      class="mt-5 grid grid-cols-1 gap-4 min-[375px]:mt-6 min-[430px]:gap-5 min-[520px]:grid-cols-2 lg:grid-cols-3"
    >
      {
        bills.map((bill) => (
          <div
            class="bill-item"
            data-title={bill.data.title.toLowerCase()}
            data-category={bill.data.category.toLowerCase()}
            data-category-slug={toCategorySlug(bill.data.category)}
            data-type={bill.data.billType}
            data-sponsor={bill.data.sponsor.toLowerCase()}
            data-committee={(bill.data.committee ?? '').toLowerCase()}
            data-tags={bill.data.tags.join(',').toLowerCase()}
            data-featured={bill.data.featured ? '1' : '0'}
            data-date={bill.data.dateIntroduced.getTime()}
          >
            <BillCard bill={bill} />
          </div>
        ))
      }
    </div>

    <div id="no-results" class="hidden py-12 text-center min-[430px]:py-16">
      <p class="mb-2 font-serif text-2xl text-navy-600">No bills found.</p>
      <p class="italic text-navy-400">The absurdity docket appears empty for now.</p>
    </div>

    {
      totalPages > 1 && (
        <div class="mt-10">
          <Pagination currentPage={currentPage} totalPages={totalPages} basePath="/type/absurd" />
        </div>
      )
    }
  </div>
</BaseLayout>
