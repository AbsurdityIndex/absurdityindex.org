---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import BillCard from '../../../../components/bills/BillCard.astro';
import BillDirectoryControls from '../../../../components/ui/BillDirectoryControls.astro';
import Pagination from '../../../../components/ui/Pagination.astro';
import { getCollection } from 'astro:content';
import {
  DIRECTORY_PAGE_SIZE,
  sortByDateDesc,
  toCategorySlug,
} from '../../../../utils/directory.js';

export async function getStaticPaths() {
  const allBills = await getCollection('bills');
  const categories = [...new Set(allBills.map((b) => b.data.category))];

  return categories.flatMap((categoryName) => {
    const categorySlug = toCategorySlug(categoryName);
    const categoryBills = allBills
      .filter((bill) => toCategorySlug(bill.data.category) === categorySlug)
      .sort(sortByDateDesc);

    const totalCount = categoryBills.length;
    const totalPages = Math.max(1, Math.ceil(totalCount / DIRECTORY_PAGE_SIZE));

    if (totalPages <= 1) {
      return [];
    }

    return Array.from({ length: totalPages - 1 }, (_, index) => {
      const page = index + 2;
      const start = (page - 1) * DIRECTORY_PAGE_SIZE;

      return {
        params: {
          category: categorySlug,
          page: String(page),
        },
        props: {
          category: categoryName,
          categorySlug,
          bills: categoryBills.slice(start, start + DIRECTORY_PAGE_SIZE),
          totalCount,
          totalPages,
          currentPage: page,
        },
      };
    });
  });
}

const { category, categorySlug, bills, totalCount, totalPages, currentPage } = Astro.props;

const prevHref =
  currentPage === 2
    ? `/category/${categorySlug}/`
    : `/category/${categorySlug}/page/${currentPage - 1}/`;
const nextHref =
  currentPage < totalPages ? `/category/${categorySlug}/page/${currentPage + 1}/` : null;
---

<BaseLayout
  title={`${category} Bills - Page ${currentPage}`}
  description={`All Absurdity Index bills in the ${category} category.`}
>
  <link slot="head" rel="prev" href={prevHref} />
  {nextHref && <link slot="head" rel="next" href={nextHref} />}

  <div class="mx-auto max-w-6xl px-3 py-8 min-[375px]:px-4 min-[430px]:py-10 md:py-12">
    <div class="mb-8 text-center min-[430px]:mb-10">
      <p
        class="mb-2 font-mono text-[11px] uppercase tracking-widest min-[375px]:text-sm text-gold-600"
      >
        Category
      </p>
      <h1 class="font-serif text-2xl font-bold text-navy-900 min-[375px]:text-3xl md:text-4xl">
        {category}
      </h1>
      <p
        class="mt-2 font-serif italic text-sm text-navy-600 min-[375px]:mt-3 min-[375px]:text-base"
      >
        {totalCount} bill{totalCount !== 1 ? 's' : ''} in this category
      </p>
    </div>
    <div class="gold-rule"></div>

    <BillDirectoryControls
      tabs={[
        { href: '/bills', label: 'Real Bills' },
        { href: '/not-bills', label: 'Not Bills' },
      ]}
      sortOptions={[
        { value: 'newest', label: 'Newest First' },
        { value: 'oldest', label: 'Oldest First' },
        { value: 'title', label: 'Title A-Z' },
        { value: 'featured', label: 'Featured First' },
        { value: 'absurdity', label: 'Highest Absurdity' },
      ]}
      defaultSortValue="newest"
      initialSortSummary="Sorted by newest first"
      initialCount={bills.length}
      totalAvailableCount={totalCount}
      showCategoryFilters={false}
      searchLabel={`Search ${category} bills`}
      searchPlaceholder="Search titles, sponsors, committees, or tags..."
      apiPagePath={`/api/categories/${categorySlug}/page`}
      currentPage={currentPage}
      totalPages={totalPages}
      cardVariant="default"
      directoryLabel={`${category.toLowerCase()} bills`}
    />

    <div
      class="mt-4 flex flex-col gap-1 text-xs font-sans text-navy-500 min-[430px]:flex-row min-[430px]:items-center min-[430px]:justify-between"
    >
      <p>Page {currentPage} of {totalPages}</p>
      <p>{totalCount} total bills in this category</p>
    </div>

    <div
      id="bills-grid"
      class="mt-5 grid grid-cols-1 gap-4 min-[375px]:mt-6 min-[430px]:gap-5 min-[520px]:grid-cols-2 lg:grid-cols-3"
    >
      {
        bills.map((bill) => (
          <div
            class="bill-item"
            data-title={bill.data.title.toLowerCase()}
            data-category={bill.data.category.toLowerCase()}
            data-category-slug={toCategorySlug(bill.data.category)}
            data-type={bill.data.billType}
            data-sponsor={bill.data.sponsor.toLowerCase()}
            data-committee={(bill.data.committee ?? '').toLowerCase()}
            data-tags={bill.data.tags.join(',').toLowerCase()}
            data-score={bill.data.absurdityIndex ?? 0}
            data-featured={bill.data.featured ? '1' : '0'}
            data-date={bill.data.dateIntroduced.getTime()}
          >
            <BillCard bill={bill} />
          </div>
        ))
      }
    </div>

    <div id="no-results" class="hidden py-12 text-center min-[430px]:py-16">
      <p class="mb-2 font-serif text-2xl text-navy-600">No bills found.</p>
      <p class="italic text-navy-400">Try clearing filters or adjusting your search.</p>
    </div>

    {
      totalPages > 1 && (
        <div class="mt-10">
          <Pagination
            currentPage={currentPage}
            totalPages={totalPages}
            basePath={`/category/${categorySlug}`}
          />
        </div>
      )
    }
  </div>
</BaseLayout>
