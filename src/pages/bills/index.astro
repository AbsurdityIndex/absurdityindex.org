---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BillCard from '../../components/bills/BillCard.astro';
import BillDirectoryControls from '../../components/ui/BillDirectoryControls.astro';
import Pagination from '../../components/ui/Pagination.astro';
import { getCollection } from 'astro:content';
import {
  DIRECTORY_PAGE_SIZE,
  sortRealBillsByAbsurdityThenDate,
  toCategorySlug,
} from '../../utils/directory.js';

const allBills = await getCollection('bills');
const realBills = allBills.filter((b) => b.data.billType === 'real');
const categories = [...new Set(realBills.map((b) => b.data.category))].sort();
const sortedBills = [...realBills].sort(sortRealBillsByAbsurdityThenDate);

const totalCount = sortedBills.length;
const totalPages = Math.max(1, Math.ceil(totalCount / DIRECTORY_PAGE_SIZE));
const currentPage = 1;
const bills = sortedBills.slice(0, DIRECTORY_PAGE_SIZE);

const siteOrigin = Astro.site?.origin ?? Astro.url.origin;

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Real Bills â€” Absurdity Index',
  description: 'Real federal bills from Congress, scored on our Absurdity Index.',
  url: `${siteOrigin}/bills/`,
  mainEntity: {
    '@type': 'ItemList',
    numberOfItems: totalCount,
    itemListElement: bills.map((bill, i) => ({
      '@type': 'ListItem',
      position: i + 1,
      url: `${siteOrigin}/bills/${bill.id}/`,
      name: bill.data.title,
    })),
  },
};
---

<BaseLayout
  title="Real Bills"
  description="Real federal bills from Congress, scored on our Absurdity Index. You can't make this stuff up."
  ogImage="/og/bills.png"
>
  {totalPages > 1 && <link slot="head" rel="next" href="/bills/page/2/" />}
  <script slot="head" is:inline type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />

  <div class="mx-auto max-w-6xl px-3 py-8 min-[375px]:px-4 min-[430px]:py-10 md:py-12">
    <div class="mb-8 text-center min-[430px]:mb-10">
      <p
        class="mb-2 font-mono text-[11px] uppercase tracking-widest min-[375px]:text-sm text-navy-500"
      >
        From the Actual U.S. Congress
      </p>
      <h1 class="font-serif text-2xl font-bold text-navy-900 min-[375px]:text-3xl md:text-4xl">
        Real Bills
      </h1>
      <p
        class="mt-2 font-serif italic text-sm text-navy-600 min-[375px]:mt-3 min-[375px]:text-base"
      >
        Real legislation, ranked by absurdity - because reality is stranger than satire
      </p>
      <p class="mx-auto mt-4 max-w-2xl font-sans text-sm leading-relaxed text-navy-500">
        The Absurdity Index tracks real federal legislation introduced in Congress and scores each
        bill on a 1&ndash;10 absurdity scale. Every entry links to its official text on
        <a href="https://www.congress.gov" target="_blank" rel="noopener noreferrer" class="underline hover:text-gold-600">Congress.gov</a>
        so you can verify our editorial ratings for yourself. Browse by category, search by keyword,
        or sort by absurdity score.
      </p>
    </div>
    <div class="gold-rule"></div>

    <BillDirectoryControls
      tabs={[
        { href: '/bills', label: 'Real Bills', active: true },
        { href: '/not-bills', label: 'Not Bills' },
      ]}
      sortOptions={[
        { value: 'absurdity', label: 'Highest Absurdity' },
        { value: 'newest', label: 'Newest First' },
        { value: 'oldest', label: 'Oldest First' },
        { value: 'title', label: 'Title A-Z' },
      ]}
      defaultSortValue="absurdity"
      initialSortSummary="Sorted by highest absurdity"
      initialCount={bills.length}
      totalAvailableCount={totalCount}
      categories={categories}
      searchLabel="Search real bills"
      searchPlaceholder="Search titles, sponsors, committees, or tags..."
      apiPagePath="/api/real-bills/page"
      currentPage={currentPage}
      totalPages={totalPages}
      cardVariant="real-grid"
      directoryLabel="real bills"
    />

    <div
      class="mt-4 flex flex-col gap-1 text-xs font-sans text-navy-500 min-[430px]:flex-row min-[430px]:items-center min-[430px]:justify-between"
    >
      <p>Page {currentPage} of {totalPages}</p>
      <p>{totalCount} total real bills in the index</p>
    </div>

    <div
      id="bills-grid"
      class="mt-5 grid grid-cols-1 gap-4 min-[375px]:mt-6 min-[430px]:gap-5 min-[520px]:grid-cols-2 lg:grid-cols-3"
    >
      {
        bills.map((bill) => (
          <div
            class="bill-item"
            data-title={bill.data.title.toLowerCase()}
            data-category={bill.data.category.toLowerCase()}
            data-category-slug={toCategorySlug(bill.data.category)}
            data-type={bill.data.billType}
            data-sponsor={bill.data.sponsor.toLowerCase()}
            data-committee={(bill.data.committee ?? '').toLowerCase()}
            data-tags={bill.data.tags.join(',').toLowerCase()}
            data-score={bill.data.absurdityIndex ?? 0}
            data-date={bill.data.dateIntroduced.getTime()}
          >
            <BillCard bill={bill} variant="real-grid" />
          </div>
        ))
      }
    </div>

    {
      totalCount === 0 && (
        <div class="py-12 text-center min-[430px]:py-16">
          <p class="mb-2 font-serif text-2xl text-navy-600">No real bills yet.</p>
          <p class="italic text-navy-400">
            Run <code class="font-mono text-sm">npm run fetch-bills</code> to fetch bills from
            Congress.gov.
          </p>
        </div>
      )
    }

    <div id="no-results" class="hidden py-12 text-center min-[430px]:py-16">
      <p class="mb-2 font-serif text-2xl text-navy-600">No bills found.</p>
      <p class="italic text-navy-400">Congress is on recess. Again.</p>
    </div>

    {
      totalPages > 1 && (
        <div class="mt-10">
          <Pagination currentPage={currentPage} totalPages={totalPages} basePath="/bills" />
        </div>
      )
    }
  </div>
</BaseLayout>
