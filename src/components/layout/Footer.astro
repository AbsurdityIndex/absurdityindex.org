---
import Disclaimer from '../ui/Disclaimer.astro';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/bills', label: 'Real Bills' },
  { href: '/not-bills', label: 'Not Bills' },
  { href: '/today', label: 'Today in Congress' },
  { href: '/trends', label: 'Trends' },
  { href: '/how-we-score', label: 'How We Score' },
  { href: '/about', label: 'About' },
];

const toolLinks = [
  { href: '/swipe', label: 'Would You Pass It?' },
  { href: '/bracket', label: 'Absurdity Madness' },
  { href: '/filibuster', label: 'Filibuster Simulator' },
  { href: '/marathon', label: 'Reading Marathon' },
  { href: '/pork', label: 'Pork Leaderboard' },
  { href: '/asmr', label: 'Legislation ASMR' },
  { href: '/quiz', label: 'Vocab Quiz' },
  { href: '/bingo', label: 'Bingo Cards' },
  { href: '/generator', label: 'Bill Generator' },
  { href: '/cost-calculator', label: 'Cost Calculator' },
  { href: '/diff', label: 'Diff Tool' },
  { href: '/embed', label: 'API & Embed' },
];
---

<footer class="bg-navy-900 text-gold-300 mt-auto">
  <hr class="gold-rule !mb-0" />

  <div class="max-w-7xl mx-auto px-4 py-10 sm:py-14">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Column 1: Brand -->
      <div>
        <p class="font-serif font-bold text-xl text-gold-400">ABSURDITY INDEX</p>
        <p class="mt-2 text-sm text-gold-300/80 leading-relaxed">
          Real bills. Real absurdity. Satirical common sense.
        </p>
      </div>

      <!-- Column 2: Quick links -->
      <div>
        <h3 class="font-sans text-xs uppercase tracking-widest text-gold-500 mb-3">
          Quick Links
        </h3>
        <ul class="space-y-2">
          {quickLinks.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="text-sm text-gold-300 hover:text-gold-200 transition-colors"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Column 3: Tools & Games -->
      <div>
        <h3 class="font-sans text-xs uppercase tracking-widest text-gold-500 mb-3">
          Tools & Games
        </h3>
        <ul class="space-y-2">
          {toolLinks.slice(0, 8).map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="text-sm text-gold-300 hover:text-gold-200 transition-colors"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Column 4: Newsletter -->
      <div>
        <h3 class="font-sans text-xs uppercase tracking-widest text-gold-500 mb-3">
          Congressional Record
        </h3>
        <p class="text-sm text-gold-300/80 mb-3">
          Get the latest bills delivered to your inbox. Unsubscribe any time &mdash; unlike real legislation.
        </p>
        <form id="footer-newsletter-form" class="flex gap-2">
          <label for="footer-email" class="sr-only">Email address</label>
          <input
            id="footer-email"
            type="email"
            placeholder="senator@example.gov"
            class="flex-1 min-w-0 bg-navy-800 border border-navy-600 rounded px-3 py-2 text-sm text-gold-200 placeholder:text-navy-500 focus:outline-none focus:border-gold-500 transition-colors"
          />
          <button
            type="submit"
            class="bg-gold-500 hover:bg-gold-400 text-navy-900 font-sans font-semibold text-sm px-4 py-2 rounded transition-colors shrink-0"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer Newsletter Modal -->
  <div
    id="footer-newsletter-modal"
    class="fixed inset-0 z-50 flex items-center justify-center p-4 hidden"
  >
    <div id="footer-newsletter-modal-backdrop" class="absolute inset-0 bg-navy-900/60"></div>
    <div class="relative bg-parchment border-2 border-gold-400 rounded-lg shadow-xl max-w-sm w-full p-8 text-center">
      <p class="text-4xl mb-4">ðŸ“­</p>
      <h3 class="font-serif text-2xl font-bold text-navy-900 mb-3">Nice Try.</h3>
      <p class="font-sans text-sm text-navy-700 leading-relaxed mb-6">
        Our newsletter is in committee. The committee meets every other leap year during a full moon.
      </p>
      <button
        id="footer-newsletter-modal-close"
        class="font-sans font-semibold text-sm bg-gold-500 text-navy-900 px-6 py-2.5 rounded hover:bg-gold-400 transition-colors"
      >
        Understood
      </button>
    </div>
  </div>

  <script>
    const footerForm = document.getElementById('footer-newsletter-form');
    const footerModal = document.getElementById('footer-newsletter-modal');
    const footerBackdrop = document.getElementById('footer-newsletter-modal-backdrop');
    const footerCloseBtn = document.getElementById('footer-newsletter-modal-close');

    function openFooterModal() {
      footerModal?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeFooterModal() {
      footerModal?.classList.add('hidden');
      document.body.style.overflow = '';
    }

    footerForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      openFooterModal();
    });

    footerBackdrop?.addEventListener('click', closeFooterModal);
    footerCloseBtn?.addEventListener('click', closeFooterModal);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !footerModal?.classList.contains('hidden')) {
        closeFooterModal();
      }
    });
  </script>

  <!-- Disclaimer -->
  <Disclaimer context="footer" />

  <!-- Bottom bar -->
  <div class="border-t border-navy-700 py-6 px-4">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-xs text-navy-400 leading-relaxed max-w-3xl mx-auto">
        Any resemblance to functioning governance is purely coincidental.
        AbsurdityIndex.org is a satirical and editorial commentary website.
        No actual legislation was harmed in the making of this site.
      </p>
      <p class="mt-3 text-xs text-navy-500">
        &copy; {currentYear} AbsurdityIndex.org. All rights reserved (unlike most congressional promises).
      </p>
    </div>
  </div>
</footer>
