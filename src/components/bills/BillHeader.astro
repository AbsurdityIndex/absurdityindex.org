---
import BillNumberBadge from './BillNumberBadge.astro';
import BillTypeBadge from './BillTypeBadge.astro';

interface Props {
  title: string;
  billNumber: string;
  billType: 'sensible' | 'absurd' | 'real';
  category: string;
  sponsor: string;
  status: string;
  summary: string;
  dateIntroduced: Date;
  tags?: string[];
  featured?: boolean;
  [key: string]: any;
}

const { title, billNumber, billType } = Astro.props;
---

<header class="text-center max-w-3xl mx-auto py-10">
  <p class="font-serif text-xs uppercase tracking-[0.2em] text-navy-600 mb-1">
    In the Not-Congress of the United States
  </p>
  <p class="font-sans text-xs text-navy-500 italic mb-6">
    119th Not-Congress &mdash; 1st Session of Futility
  </p>

  <div class="flex items-center justify-center gap-3 mb-5">
    <span class="font-mono text-2xl font-bold text-navy-800 tracking-wide">
      {billNumber}
    </span>
    <BillTypeBadge billType={billType} />
  </div>

  <h1 class="font-serif text-3xl md:text-4xl font-bold text-navy-900 leading-tight mb-6">
    {title}
  </h1>

  <hr class="gold-rule" />
</header>
