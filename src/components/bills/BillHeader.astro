---
import BillNumberBadge from './BillNumberBadge.astro';
import BillTypeBadge from './BillTypeBadge.astro';
import ReadingTime from '../ui/ReadingTime.astro';

interface Props {
  title: string;
  billNumber: string;
  billType: 'sensible' | 'absurd' | 'real';
  category?: string;
  sponsor?: string;
  status?: string;
  summary?: string;
  dateIntroduced?: Date;
  tags?: string[];
  featured?: boolean;
  readingTimeContent?: string;
  [key: string]: any;
}

const { title, billNumber, billType, readingTimeContent } = Astro.props;

// Determine the chamber text based on bill type
const chamberText = billType === 'real'
  ? 'In the Congress of the United States'
  : 'In the Absurdity Index of the United States';

const sessionText = billType === 'real'
  ? '119th Congress — 1st Session'
  : '119th Absurdity Index — 1st Session of Futility';
---

<header class="text-center max-w-3xl mx-auto py-10">
  <p class="font-serif text-xs uppercase tracking-[0.2em] text-navy-600 mb-1">
    {chamberText}
  </p>
  <p class="font-sans text-xs text-navy-500 italic mb-6">
    {sessionText}
  </p>

  <div class="flex items-center justify-center gap-3 mb-5">
    <span class="font-mono text-2xl font-bold text-navy-800 tracking-wide">
      {billNumber}
    </span>
    <BillTypeBadge billType={billType} />
  </div>

  <h1 class="font-serif text-3xl md:text-4xl font-bold text-navy-900 leading-tight mb-4">
    {title}
  </h1>

  {readingTimeContent && (
    <div class="flex justify-center mb-4">
      <ReadingTime content={readingTimeContent} />
    </div>
  )}

  <hr class="gold-rule" />
</header>
