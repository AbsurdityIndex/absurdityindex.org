---
import Icon from '../ui/Icon.astro';

interface Props {
  votes?: {
    yeas: number;
    nays: number;
    notVoting: number;
    passed: boolean;
    chamber?: 'house' | 'senate';
  };
}

const { votes } = Astro.props;

if (!votes) {
  return;
}

const total = votes.yeas + votes.nays + votes.notVoting;
const yeaPercent = (votes.yeas / total * 100).toFixed(1);
const nayPercent = (votes.nays / total * 100).toFixed(1);
---

{votes && (
  <div class="bg-cream-100 border border-gold-300 rounded-lg p-4 mt-4">
    <h4 class="font-serif font-bold text-navy-900 text-sm mb-3 flex items-center gap-2">
      <Icon name="vote" size={16} class="text-gold-600" />
      {votes.chamber ? `${votes.chamber === 'house' ? 'House' : 'Senate'} Vote` : 'Vote Results'}
    </h4>

    <!-- Vote bar visualization -->
    <div class="flex h-5 rounded-full overflow-hidden mb-3 shadow-inner border border-gold-200">
      <div class="bg-green-600" style={`width: ${yeaPercent}%`}></div>
      <div class="bg-red-600" style={`width: ${nayPercent}%`}></div>
      <div class="bg-navy-300" style={`width: ${100 - parseFloat(yeaPercent) - parseFloat(nayPercent)}%`}></div>
    </div>

    <div class="grid grid-cols-3 gap-2 text-center text-sm">
      <div class="bg-green-50 rounded-lg py-2 border border-green-200">
        <div class="font-mono font-bold text-green-700">{votes.yeas}</div>
        <div class="text-xs text-green-600 font-medium">Yea</div>
      </div>
      <div class="bg-red-50 rounded-lg py-2 border border-red-200">
        <div class="font-mono font-bold text-red-700">{votes.nays}</div>
        <div class="text-xs text-red-600 font-medium">Nay</div>
      </div>
      <div class="bg-navy-50 rounded-lg py-2 border border-navy-200">
        <div class="font-mono font-bold text-navy-500">{votes.notVoting}</div>
        <div class="text-xs text-navy-400 font-medium">Abstain</div>
      </div>
    </div>

    <div class="flex items-center justify-center gap-2 mt-3 pt-3 border-t border-gold-200">
      {votes.passed ? (
        <>
          <Icon name="check-circle" size={16} class="text-green-600" />
          <span class="text-green-700 font-semibold text-sm">PASSED</span>
        </>
      ) : (
        <>
          <Icon name="x-circle" size={16} class="text-red-600" />
          <span class="text-red-700 font-semibold text-sm">FAILED</span>
        </>
      )}
    </div>
  </div>
)}
