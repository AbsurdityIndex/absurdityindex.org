---
interface Props {
  title: string;
  summary: string;
  url: string;
}

const { title, summary, url } = Astro.props;

const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedSummary = encodeURIComponent(summary);
const twitterText = encodeURIComponent(`${title}\n\n${summary}`);
---

<div class="share-buttons flex items-center gap-3 mt-6 pt-6 border-t border-gold-300">
  <span class="text-xs font-sans font-semibold uppercase tracking-wide text-navy-600">Share:</span>

  <!-- Twitter/X -->
  <a
    href={`https://twitter.com/intent/tweet?text=${twitterText}&url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-navy-800 text-gold-400 hover:bg-navy-700 hover:text-gold-300 transition-colors"
    aria-label="Share on X (Twitter)"
    title="Share on X"
  >
    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
      ></path>
    </svg>
  </a>

  <!-- Reddit -->
  <a
    href={`https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-navy-800 text-gold-400 hover:bg-navy-700 hover:text-gold-300 transition-colors"
    aria-label="Share on Reddit"
    title="Share on Reddit"
  >
    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"
      ></path>
    </svg>
  </a>

  <!-- Copy link -->
  <button
    id="copy-link-btn"
    class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-navy-800 text-gold-400 hover:bg-navy-700 hover:text-gold-300 transition-colors"
    aria-label="Copy link"
    title="Copy link"
    data-url={url}
  >
    <svg
      class="w-4 h-4"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
      <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
    </svg>
  </button>
  <span id="copy-feedback" class="text-xs text-green-700 font-sans hidden">Copied!</span>
</div>

<script>
  const btn = document.getElementById('copy-link-btn');
  const feedback = document.getElementById('copy-feedback');
  btn?.addEventListener('click', async () => {
    const url = btn.getAttribute('data-url') || window.location.href;
    await navigator.clipboard.writeText(url);
    feedback?.classList.remove('hidden');
    setTimeout(() => feedback?.classList.add('hidden'), 2000);
  });
</script>
