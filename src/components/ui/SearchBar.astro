---
interface Props {
  id?: string;
  label?: string;
  placeholder?: string;
}

const {
  id = 'bill-search',
  label = 'Search bills',
  placeholder = 'Search bills, sponsors, or committees...',
} = Astro.props;
---

<div class="relative">
  <label for={id} class="sr-only">{label}</label>
  <svg
    class="absolute left-3 top-1/2 h-4 w-4 -translate-y-1/2 text-navy-500"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
  </svg>
  <input
    type="text"
    id={id}
    placeholder={placeholder}
    class="w-full rounded border border-gold-400 bg-cream-100 py-2.5 pl-10 pr-4 font-serif text-base text-navy-900 transition-colors placeholder:font-serif placeholder:text-navy-400 focus:border-gold-500 focus:outline-none focus:ring-2 focus:ring-gold-500 sm:text-sm"
  />
</div>
