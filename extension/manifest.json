{
  "manifest_version": 3,
  "name": "Absurdity Index",
  "version": "1.0.0",
  "description": "See Absurdity Index scores while browsing Congress.gov",
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.congress.gov/*"],
  "content_scripts": [
    {
      "matches": ["https://www.congress.gov/bill/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-48.png"
  }
}
