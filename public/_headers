# Security headers are authoritatively set by functions/_middleware.js.
# This file acts as a defense-in-depth fallback for any static assets
# that Cloudflare serves directly from the edge cache (bypassing Functions).
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains
  X-Permitted-Cross-Domain-Policies: none
  Content-Security-Policy: default-src 'self'; base-uri 'self'; form-action 'self'; object-src 'none'; frame-ancestors 'none'; script-src 'self' 'unsafe-inline' https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://cloudflareinsights.com https://*.corey-steinwand.workers.dev; upgrade-insecure-requests

/api/*
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, OPTIONS
  Access-Control-Allow-Headers: Content-Type
  X-Robots-Tag: noindex

/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=604800

/og-image.svg
  Cache-Control: public, max-age=604800
  Content-Type: image/svg+xml

/og-image.png
  Cache-Control: public, max-age=604800
  Content-Type: image/png
